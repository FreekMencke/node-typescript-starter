{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "author": "Freek Mencke",
  "homepage": "https://twitter.com/FreekMencke",
  "repository": {
    "type": "git",
    "url": "https://github.com/FreekMencke/node-typescript-starter"
  },
  "license": "MIT",
  "scripts": {
    "start": "webpack --progress --env development --env nodemon",
    "start:prod": "webpack --progress --env nodemon",
    "start:ci": "cross-env-shell node ./dist/$npm_package_name",
    "start:dev": "cross-env-shell node --inspect ./dist/$npm_package_name",
    "build:ci": "webpack",
    "build:dev": "webpack --env development",
    "build:prod": "webpack --progress",
    "build:docker": "cross-env-shell docker build --rm -t freekmencke/$npm_package_name:latest .",
    "deploy:docker": "sh ./scripts/deploy.sh",
    "analyse:dev": "webpack --progress --env development --env analyse && start dist/report.html",
    "analyse:prod": "webpack --progress --env analyse && start dist/report.html",
    "lint": "eslint . --ext .ts"
  },
  "devDependencies": {
    "@types/node": "^18.7.16",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.23.0",
    "nodemon-webpack-plugin": "^4.8.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.8.3",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.6.1",
    "webpack-cli": "^4.10.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
